// com.adam.utils.Shot// Adam Riggs//package com.app.view.weapons {	import com.adam.events.MuleEvent;	import com.adam.utils.Utils;	import com.app.lib.ShotMC;	import com.app.model.Model;	import com.greensock.TweenLite;		import flash.display.Sprite;	import flash.events.*;
		public class Shot extends Sprite {				//vars		protected var _speedX:Number;		protected var _speedY:Number;		protected var _velocity:Number;		protected var _active:Boolean;				//objects		protected var utils:Utils=Utils.instance;		protected var model:Model=Model.instance;		protected var shot:ShotMC;				//const		public const NAME:String="shot";		public const RETURNTYPE:String=NAME;				public function Shot(){						init();		}		//*****Initialization Routines				public function init():void{			//debug("init()");						initVars();			initEvents();			initObjs();		}				private function initVars():void{			_velocity=20;			_active=false;		}				private function initEvents():void{			utils.em.listen(NAME, onShot);		}				private function initObjs():void{			shot=new ShotMC;			addChild(shot);		}		//*****Core Functionality				protected function calcSpeed():void{			_speedY=-_velocity*Math.cos(utils.degToRad(rotation));			_speedX=_velocity*Math.sin(utils.degToRad(rotation));		}				public function move():void{			x+=_speedX;			y+=_speedY;						if(x<0 || x>model.stageWidth || y<0 || y>model.stageHeight){				deactivate();			}								}				public function fire():void{			//debug("fire");			calcSpeed();			activate();		}				public function deactivate():void{						_active=false;			visible=false;		}				protected function activate():void{						_active=true;			visible=true;		}		//*****Event Handlers				private function onShot(e:MuleEvent):void{			/*debug("onShot()");			debug("e.data.sender=="+e.data.sender);			debug("e.data.type=="+e.data.type);*/			switch(e.data.type){																default:					debug("onShot()");					debug("*type not found");					debug("e.data.sender=="+e.data.sender);					debug("e.data.type=="+e.data.type);				break;							}		}				//*****Gets and Sets				public function get active():Boolean{return _active;}		//*****Utility Functions				//**visibility		public function show():void{			this.visible = true;		}				public function hide():void{			this.visible = false;		}				//**debug		private function debug(str:String):void{			utils.debug(NAME,str);		}				}//end class}//end package