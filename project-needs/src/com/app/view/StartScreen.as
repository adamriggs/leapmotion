		public class StartScreen extends Sprite{				//vars				//objects		private var utils:Utils=Utils.instance;		protected var model:Model=Model.instance;		protected var _startScreenMC:StartScreenMC;		protected var _bkg:Sprite;				public var startBtn:MovieClip;				//const		public const NAME:String="startScreen";		public const RETURNTYPE:String=NAME;				/** Storage for the singleton instance. */		private static const _instance:StartScreen = new StartScreen(StartScreenLock);				public function StartScreen(lock:Class){			// Verify that the lock is the correct class reference.			if (lock != StartScreenLock)			{				throw new Error("Invalid StartScreen access.  Use StartScreen.instance instead.");			} else {				init();			}		}		//*****Initialization Routines				public function init():void{			debug("init()");						initVars();			initEvents();			initObjs();		}				private function initVars():void{					}				private function initEvents():void{			utils.em.listen(NAME, onStartScreen);		}				private function initObjs():void{			_bkg=new Sprite();			addChild(_bkg);			_bkg.graphics.beginFill(0x999999,.8);			_bkg.graphics.drawRect(0,0,model.stageWidth,model.stageHeight);			_bkg.graphics.endFill();						_startScreenMC=new StartScreenMC();			addChild(_startScreenMC);			_startScreenMC.x=(model.stageWidth-_startScreenMC.width)/2;			_startScreenMC.y=(model.stageHeight-_startScreenMC.height)/2;						startBtn=_startScreenMC.startBtn;		}		//*****Core Functionality						//*****Event Handlers				private function onStartScreen(e:MuleEvent):void{			/*debug("onStartScreen()");			debug("e.data.sender=="+e.data.sender);			debug("e.data.type=="+e.data.type);*/			switch(e.data.type){												default:					debug("onStartScreen()");					debug("*type not found");					debug("e.data.sender=="+e.data.sender);					debug("e.data.type=="+e.data.type);				break;							}		}				//*****Gets and Sets				public static function get instance():StartScreen{return _instance;}		//*****Utility Functions				//**debug		private function debug(str:String):void{			utils.debug(NAME,str);		}				}//end class}//end packageclass StartScreenLock{}